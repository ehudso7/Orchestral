# Orchestral Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# Provider API Keys (at least one required)
# ===========================================

# OpenAI (for GPT-5.1, GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_ORG_ID=org-optional-org-id

# Anthropic (for Claude Opus 4.5, Sonnet 4.5, Haiku)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google (for Gemini 3 Ultra, Pro, Flash)
GOOGLE_API_KEY=your-google-api-key
# GOOGLE_PROJECT_ID=your-project-id
# GOOGLE_LOCATION=us-central1

# ===========================================
# Orchestrator Settings
# ===========================================

# Default models per provider
ORCHESTRAL_DEFAULT_OPENAI_MODEL=gpt-4o
ORCHESTRAL_DEFAULT_ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ORCHESTRAL_DEFAULT_GOOGLE_MODEL=gemini-3-pro-preview

# Execution settings
ORCHESTRAL_DEFAULT_TIMEOUT=120.0
ORCHESTRAL_MAX_RETRIES=3
ORCHESTRAL_MAX_PARALLEL_REQUESTS=5

# Logging
ORCHESTRAL_LOG_LEVEL=INFO
ORCHESTRAL_LOG_FORMAT=json

# ===========================================
# Server Settings
# ===========================================

ORCHESTRAL_SERVER_HOST=0.0.0.0
ORCHESTRAL_SERVER_PORT=8000
ORCHESTRAL_SERVER_WORKERS=4

# Authentication (optional)
ORCHESTRAL_SERVER_REQUIRE_AUTH=false
# ORCHESTRAL_SERVER_API_KEYS=key1,key2,key3

# ===========================================
# Redis (for commercial features)
# ===========================================

# Redis URL (use this OR host/port/password)
# REDIS_URL=redis://user:password@host:6379/0

# Or individual settings
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=false

# ===========================================
# Billing & Commercial Settings
# ===========================================

ORCHESTRAL_BILLING_ENABLED=true
ORCHESTRAL_BILLING_USAGE_TRACKING_ENABLED=true
ORCHESTRAL_BILLING_BUDGET_ALERTS_ENABLED=true

# API Key Secret (CRITICAL for production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# This secret MUST be persistent across restarts or all API keys become invalid!
# If not set, will auto-generate and store in Redis (requires Redis) or warn in dev mode.
# ORCHESTRAL_BILLING_API_KEY_SECRET=your-64-character-hex-secret-here

# Response caching
ORCHESTRAL_BILLING_CACHE_ENABLED=true
ORCHESTRAL_BILLING_CACHE_TTL_SECONDS=3600
ORCHESTRAL_BILLING_CACHE_MAX_ENTRIES=10000

# Budget controls
ORCHESTRAL_BILLING_DEFAULT_MONTHLY_BUDGET_USD=100.0
ORCHESTRAL_BILLING_BUDGET_ALERT_THRESHOLD=0.8
ORCHESTRAL_BILLING_HARD_BUDGET_LIMIT=false

# Webhook for alerts (optional)
# ORCHESTRAL_BILLING_ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# ===========================================
# Admin API
# ===========================================

ORCHESTRAL_SERVER_ADMIN_API_ENABLED=true
# ORCHESTRAL_SERVER_ADMIN_API_KEY=your-secure-admin-key

# ===========================================
# Environment
# ===========================================

ENVIRONMENT=development
DEBUG=false
